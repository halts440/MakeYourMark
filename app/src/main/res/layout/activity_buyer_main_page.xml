<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyerMainPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_margin="10dp"
                android:id="@+id/uImage"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/default_image">
            </de.hdodenhof.circleimageview.CircleImageView>

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_margin="10dp"
                    android:id="@+id/uName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="User Name">
                </TextView>

                <TextView
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_margin="10dp"
                    android:id="@+id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Balance: ">
                </TextView>

            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:padding="10dp"
            android:background="#544CAF50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/searchImg"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:scaleType="centerCrop"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/search">
                </ImageView>

                <ImageView
                    android:id="@+id/ordersImg"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:scaleType="centerCrop"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/order">
                </ImageView>

                <ImageView
                    android:id="@+id/collectionsImg"
                    android:elevation="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:scaleType="centerCrop"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/collections">
                </ImageView>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:paddingBottom="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/black"
                android:layout_marginLeft="18dp"
                android:id="@+id/BMP_tv1"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pencil Colors">
            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_BMP1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:textColor="@color/black"
                android:layout_marginLeft="18dp"
                android:id="@+id/BMP_tv2"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notebooks">
            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_BMP2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:textColor="@color/black"
                android:layout_marginLeft="18dp"
                android:id="@+id/BMP_tv3"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculators">
            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_BMP3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>s

            <Button
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="50dp"
                android:background="#EB4132"
                android:id="@+id/logout_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log out">
            </Button>

        </LinearLayout>

    </LinearLayout>

</ScrollView>